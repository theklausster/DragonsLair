@model IEnumerable<Entities.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Teams</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loss)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Win)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Players)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Loss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Win)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Players != null)
                {
                    foreach (var player in item.Players)
                    {
                        <p>@player.Name</p>
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Details", "Details", new {id = item.Id}, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
