@model IEnumerable<Entities.Group>
@{
    ViewBag.Title = "Index";
}

<h2>Groups</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @foreach (var team in item.Teams)
                {
                    Html.DisplayText(team.Name + " ");
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Details", "Details", new {id = item.Id}, new { @class = "btn btn-info" } ) 
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
