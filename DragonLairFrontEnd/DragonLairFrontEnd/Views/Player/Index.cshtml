@model IEnumerable<Entities.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Player</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("In number of teams")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teams.Count)
            </td>
            <td>
                <div class="btn-group-sm">
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-info"})
                    @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-info"})
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-warning"})
                </div>
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>
