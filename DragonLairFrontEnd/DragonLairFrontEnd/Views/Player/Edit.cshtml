@model DragonLairFrontEnd.Models.PlayerModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Player</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Player.Id)

        <div class="container">
            <div class="form-group">
                @Html.LabelFor(model => model.Player.Name, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Player.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Player.Name, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
        <div class="btn-group-sm">
            <div class="container">
                <div class="form-group">
                    @Html.Label("In Team at the moment", htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        <div class="btn-group-sm">
                            <table class="tableAdd col-md-6">
                                @foreach (var team in Model.TeamsAdded)
                                {
                                    <tr>
                                        <td class="col-md-6">
                                            @Html.DisplayFor(modelItem => team.Name)
                                            @Html.Hidden("teamId", team.Id)
                                        </td>
                                        <td class="col-md-6">
                                            @Html.ActionLink("Remove", "Remove", new {teamId = team.Id, playerId = Model.Player.Id}, new {@Class = "btn btn-danger"})
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="form-group">
                    @Html.Label("Select Teams", htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        <div class="btn-group-sm">
                            <table class="tableRemove col-md-6">
                                @foreach (var team in Model.ListWithOutAdded)
                                {
                                    <tr>
                                        <td class="col-md-6">
                                            @Html.DisplayFor(modelItem => team.Name)
                                        </td>
                                        <td class="col-md-6">
                                            @Html.ActionLink("ADD", "ADD", new {teamId = team.Id, playerId = Model.Player.Id}, new {@Class = "btn btn-success"})
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
