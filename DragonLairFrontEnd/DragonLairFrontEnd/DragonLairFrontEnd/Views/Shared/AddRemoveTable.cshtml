@model Entities.Player
<div class="container">
    <div class="form-group">
        @Html.Label("In Team at the moment", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <table class="table col-md-6">
                @foreach (var team in Model.Player.Teams)
                {
                    <tr>
                        <td class="col-md-6">
                            @Html.DisplayFor(modelItem => team.Name)
                        </td>
                        <td class="col-md-6">
                            @Html.ActionLink("Remove", "Remove", new { TeamId = team.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="form-group">
        @Html.Label("Select Teams", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <table class="table col-md-6">
                @foreach (var team in Model.Teams)
                {
                    <tr>
                        <td class="col-md-6">
                            @Html.DisplayFor(modelItem => team.Name)
                        </td>
                        <td class="col-md-6">
                            @Html.ActionLink("ADD", "Add", "Player", new { TeamId = team.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

